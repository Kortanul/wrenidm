<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.forgerock</groupId>
        <artifactId>forgerock-parent</artifactId>
        <version>2.0.8</version>
    </parent>
    <groupId>org.forgerock.openidm</groupId>
    <artifactId>openidm-commercial</artifactId>
    <version>5.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>OpenIDM Commercial Project</name>
    <description>OpenIDM is an open standards based Identity Management, Provisioning and Compliance solution.
        Experience shows that the most important features of an identity management product are: high flexibility in
        Business Process handling and compliance with open standards and interfaces. A highly flexible user interface
        combined with a very robust workflow engine make OpenIDM ready for any Identity Management project.
    </description>
    <inceptionYear>2013</inceptionYear>
    <url>http://openidm.forgerock.org</url>
    <licenses>
    </licenses>
    <scm>
        <connection>scm:git:ssh://git@stash.forgerock.org:7999/openidm/openidm-commercial.git</connection>
        <developerConnection>scm:git:ssh://git@stash.forgerock.org:7999/openidm/openidm-commercial.git
        </developerConnection>
        <url>https://stash.forgerock.org/projects/OPENIDM/repos/openidm-commercial/browse</url>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <site>
            <id>forgerock.org</id>
            <name>ForgeRock Community Server</name>
            <url>${siteDistributionURL}</url>
        </site>
    </distributionManagement>

    <!-- NOT ALLOWED: (see FAQ at http://maven.apache.org/guides/mini/guide-central-repository-upload.html ) -->
    <repositories>
        <repository>
            <id>forgerock-staging-repository</id>
            <name>ForgeRock Release Repository</name>
            <url>http://maven.forgerock.org/repo/private-releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>forgerock-snapshots-repository</id>
            <name>ForgeRock Snapshot Repository</name>
            <url>http://maven.forgerock.org/repo/private-snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>forgerock-plugins-repository</id>
            <name>ForgeRock Plugin Repository</name>
            <url>http://maven.forgerock.org/repo/repo</url>
        </pluginRepository>
    </pluginRepositories>

    <issueManagement>
        <system>jira</system>
        <url>https://bugster.forgerock.org/jira/browse/OPENIDM</url>
    </issueManagement>

    <properties>
        <openidm.version>5.0.0-SNAPSHOT</openidm.version>

        <salesforce.api.version>29</salesforce.api.version>
        <provisioner.salesforcemodule.version>2.0.${salesforce.api.version}.4-SNAPSHOT</provisioner.salesforcemodule.version>
        <openicf.googleconnector.version>1.4.1.0</openicf.googleconnector.version>

        <!-- Documentation and site properties -->
        <siteDistributionURL>scp://community.internal.forgerock.com/var/www/vhosts/openidm.forgerock.org/httpdocs</siteDistributionURL>
    </properties>

    <modules>
        <module>openidm-commercial-samples</module>
        <module>openidm-commercial-zip</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!--
                mvn versions:display-plugin-updates
                mvn versions:display-dependency-updates
                mvn versions:use-latest-versions
            -->
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
            </plugins>
        </pluginManagement>
    </build>
</project>
