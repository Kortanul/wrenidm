<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>samples</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <includes>
                <include>README</include>
                <include>data/**</include>
                <include>db/**</include>
            </includes>
            <outputDirectory></outputDirectory>
        </fileSet>

        <!--Use case 1 Reconciliation-->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>1-loading-data-with-sync</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>conf/managed.json</include>
                <include>conf/repo.orientdb.json</include>
                <include>conf/sync.json</include>
                <include>conf/system.properties</include>
                <include>conf/provisioner.openicf-HRldap.json</include>
                <include>conf/policy.json</include>
                <include>script/customPolicy.js</include>
                <include>script/on*.js</include>
                <include>script/transform*.js</include>
                <include>script/defineRoles.js</include>
            </includes>
            <!--
                These particular workflow files are instead bundled as .bar files; as raw files they are excluded.
                See zip-workflow-files in openidm-samples/workflow-use-cases/pom.xml and the inclusion of the bar-files below.
             -->
            <excludes>
                <exclude>workflow/*</exclude>
            </excludes>
        </fileSet>

        <!-- Use case 2 User onboarding-->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>2-new-user-onboarding</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>conf/endpoint-getusermanager.json</include>
                <include>conf/managed.json</include>
                <include>conf/policy.json</include>
                <include>conf/process-access.json</include>
                <include>conf/repo.orientdb.json</include>
                <include>conf/schedule-taskscan_sun*.json</include>
                <include>conf/system.properties</include>
                <include>conf/workflow.json</include>
                <include>conf/external.email.json</include>
                <include>script/getUserManager.js</include>
                <include>script/customPolicy.js</include>
                <include>script/on*.js</include>
                <include>script/sun*.js</include>
                <include>workflow/sunrise.bpmn20.xml</include>
                <include>workflow/sunset.bpmn20.xml</include>
            </includes>
        </fileSet>

        <!-- Use case 3 User access request-->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>3-user-access-request</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>conf/endpoint-getusermanager.json</include>
                <include>conf/external.email.json</include>
                <include>conf/managed.json</include>
                <include>conf/process-access.json</include>
                <include>conf/repo.orientdb.json</include>
                <include>conf/system.properties</include>
                <include>conf/workflow.json</include>
                <include>conf/policy.json</include>
                <include>script/customPolicy.js</include>
                <include>script/getUserManager.js</include>
                <include>script/on*.js</include>
                <include>workflow/accessRequest.bpmn20.xml</include>
            </includes>
        </fileSet>

        <!-- Use case 4 Orphan account detection and manual linking-->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>4-orphan-account-detection</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>conf/endpoint-getusermanager.json</include>
                <include>conf/managed.json</include>
                <include>conf/process-access.json</include>
                <include>conf/provisioner.openicf-BusinessCSV.json</include>
                <include>conf/repo.orientdb.json</include>
                <include>conf/syncManagedBusiness.json</include>
                <include>conf/system.properties</include>
                <include>conf/workflow.json</include>
                <include>conf/policy.json</include>
                <include>script/customPolicy.js</include>
                <include>data/business.csv</include>
                <include>script/getUserManager.js</include>
                <include>script/isSourceValidBusiness.js</include>
                <include>script/on*.js</include>
                <include>script/correlationQuery.js</include>
                <include>workflow/orphanAccountReport.bpmn20.xml</include>
            </includes>
        </fileSet>

        <!-- Use case 5 Password change workflow -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>5-password-change-reminder</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>conf/endpoint-getusermanager.json</include>
                <include>conf/external.email.json</include>
                <include>conf/managed.json</include>
                <include>conf/process-access.json</include>
                <include>conf/repo.orientdb.json</include>
                <include>conf/schedule-taskscan_passwordchange.json</include>
                <include>conf/system.properties</include>
                <include>conf/workflow.json</include>
                <include>conf/policy.json</include>
                <include>script/customPolicy.js</include>
                <include>script/getUserManager.js</include>
                <include>script/on*.js</include>
                <include>script/passwordchange.js</include>
                <include>workflow/passwordChangeReminder.bpmn20.xml</include>
            </includes>
        </fileSet>
    </fileSets>

    <!-- include bar-files -->
    <files>
        <file>
            <source>${project.build.directory}/bar-files/workflow/newUserCreate.bar</source>
            <outputDirectory>2-new-user-onboarding/workflow</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/bar-files/workflow/manualMatch.bar</source>
            <outputDirectory>4-orphan-account-detection/workflow</outputDirectory>
        </file>
        <!--
        <file>
            <source>${project.build.directory}/bar-files/workflow/certification*.bar</source>
            <outputDirectory>usecase5/workflow</outputDirectory>
        </file>
        -->
    </files>
    <dependencySets>
        <!-- Overlay each workflow-use-cases directory with the rest of the default project -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>1-loading-data-with-sync</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:default:zip:samples</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>2-new-user-onboarding</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:default:zip:samples</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>3-user-access-request</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:default:zip:samples</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>4-orphan-account-detection</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:default:zip:samples</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>5-password-change-reminder</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:default:zip:samples</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
