<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <!-- start by copying all of the public openidm zip contents -->
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm</directory>
            <outputDirectory>/openidm</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/conf</directory>
            <outputDirectory>/openidm/conf</outputDirectory>
        </fileSet>
        <!-- Include the Forgerock binary license file if exists -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/openidm/legal-notices</outputDirectory>
            <includes>
                <include>Forgerock_License.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/orientdb-community-${orientdb.studio.version}/www</directory>
            <outputDirectory>/openidm/db/util/orientdb/studio</outputDirectory>
        </fileSet>
        <!-- add provisioner samples to provisioners directory -->
        <fileSet>
            <directory>${basedir}/src/main/resources/samples/provisioners</directory>
            <includes>
                <include>${google.provisioner}</include>
                <include>${salesforce.provisioner}</include>
                <include>${marketo.provisioner}</include>
            </includes>
            <outputDirectory>/openidm/samples/provisioners</outputDirectory>
        </fileSet>
        <!-- start salesforce sample boilerplate -->
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm</directory>
            <includes>
                <include>${default.conf}</include>
                <include>${default.script}</include>
            </includes>
            <outputDirectory>/openidm/samples/salesforce-connector</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/samples/provisioners</directory>
            <includes>
                <include>${salesforce.provisioner}</include>
            </includes>
            <outputDirectory>/openidm/samples/salesforce-connector/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/samples/provisioners</directory>
            <includes>
                <include>provisioner.openicf*ldap.json</include>
            </includes>
            <outputDirectory>/openidm/ui/admin/default/templates/admin/connector/configs/ldap</outputDirectory>
        </fileSet>
        <!-- start google connector sample boilerplate -->
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm</directory>
            <includes>
                <include>${default.conf}</include>
                <include>${default.script}</include>
            </includes>
            <outputDirectory>/openidm/samples/google-connector</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/samples/provisioners</directory>
            <includes>
                <include>${google.provisioner}</include>
            </includes>
            <outputDirectory>/openidm/samples/google-connector/conf</outputDirectory>
        </fileSet>
        <!-- start cdm sample boilerplate -->
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm</directory>
            <includes>
                <include>${default.conf}</include>
                <include>${default.script}</include>
            </includes>
            <outputDirectory>/openidm/samples/cdm</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/conf</directory>
            <outputDirectory>/openidm/samples/cdm/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/samples/provisioners</directory>
            <includes>
                <include>${marketo.provisioner}</include>
            </includes>
            <outputDirectory>/openidm/samples/cdm/conf</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <!-- copy salesforce bundle -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/openidm/bundle</outputDirectory>
            <scope>runtime</scope>
            <includes>
                <include>org.forgerock.openidm:openidm-salesforce</include>
            </includes>
        </dependencySet>
        <!-- copy connector libs -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/openidm/connectors</outputDirectory>
            <includes>
                <include>org.forgerock.openicf.connectors:googleapps-connector</include>
                <include>org.forgerock.openicf.connectors:marketo-connector</include>
            </includes>
        </dependencySet>
        <!-- copy salesforce sample commercial artifact bits -->
        <dependencySet>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/**</exclude>
                </excludes>
            </unpackOptions>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>/openidm/samples/salesforce-connector</outputDirectory>
            <includes>
                <include>org.forgerock.openidm:openidm-salesforce-sample</include>
            </includes>
        </dependencySet>
        <!-- copy google sample commercial artifact bits -->
        <dependencySet>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/**</exclude>
                </excludes>
            </unpackOptions>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>/openidm/samples/google-connector</outputDirectory>
            <includes>
                <include>org.forgerock.openidm:openidm-google-sample</include>
            </includes>
        </dependencySet>
        <!-- copy cdm sample commercial artifact bits -->
        <dependencySet>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/**</exclude>
                </excludes>
            </unpackOptions>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>/openidm/samples/cdm</outputDirectory>
            <includes>
                <include>org.forgerock.openidm:openidm-cdm-sample</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>/openidm/samples/devops-postgres</outputDirectory>
            <includes>
                <include>org.forgerock.openidm:devops-postgres:zip</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>/openidm/samples/devops-gettingstarted</outputDirectory>
            <includes>
                <include>org.forgerock.openidm:devops-gettingstarted:zip</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org.forgerock.openidm:devops-openidm:zip</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
