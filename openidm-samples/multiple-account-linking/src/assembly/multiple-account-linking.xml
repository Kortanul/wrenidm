<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>samples</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- order here is important - include the sample's files first -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- source authentication.json with passthrough before default sample -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>conf</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:misc:zip:samples</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>authentication.json</include>
                </includes>
            </unpackOptions>
        </dependencySet>
        <!-- sample Example.ldif is in sample2 -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:sample2:zip:samples</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>data/Example.ldif</include>
                </includes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>conf</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:provisioners:zip:samples</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>provisioner.openicf-ldap.json</include>
                </includes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:default:zip:samples</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
