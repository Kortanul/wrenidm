<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!--
      ~ DO NOT REMOVE COPYRIGHT NOTICES OR THIS HEADER.
      ~
      ~ Copyright 2016 ForgeRock AS All rights reserved.
      -->
    <id>samples</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- order here is important : this first set is from the devops-gettingstarted sample itself -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <excludes>
                <exclude>keystore.jceks</exclude>
                <exclude>truststore</exclude>
            </excludes>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <includes>
                <include>keystore.jceks</include>
                <include>truststore</include>
            </includes>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- add normal getting-started base, sans orient -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:getting-started:zip:samples</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>README.*</exclude>
                    <exclude>conf/repo.orientdb.json</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <!-- add postgres repo config -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory></outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.forgerock.openidm:repo-config:zip:postgresql</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>conf/*.json</include>
                </includes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>
