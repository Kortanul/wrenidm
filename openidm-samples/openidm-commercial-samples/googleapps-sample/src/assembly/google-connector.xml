<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>samples</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- order here is important - include google sample files first -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>samples/google-connector</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependency/openidm</directory>
            <outputDirectory>samples/google-connector</outputDirectory>
            <filtered>true</filtered>
            <excludes>
                <exclude>**/*.patch</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>connectors</outputDirectory>
            <includes>
                <include>org.forgerock.openicf.connectors:googleapps-connector</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>com.google.oauth-client:google-oauth-client</include>
                <include>com.google.oauth-client:google-oauth-client-java6</include>
                <include>com.google.api-client:google-api-client</include>
                <include>com.google.http-client:google-http-client</include>
                <include>com.google.http-client:google-http-client-jackson2</include>
                <include>com.google.apis:google-api-services-admin-directory</include>
                <include>com.google.apis:google-api-services-licensing</include>
                <include>com.google.guava:guava</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
