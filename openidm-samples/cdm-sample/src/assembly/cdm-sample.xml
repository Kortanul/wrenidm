<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>samples</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- order here is important : this first set is from the cdm sample itself -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>samples/cdm</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <!-- this set is the default project which apparently does not overwrite things in the first set -->
        <fileSet>
            <directory>${project.build.directory}/dependency/openidm</directory>
            <outputDirectory>samples/cdm</outputDirectory>
            <filtered>true</filtered>
            <excludes>
                <exclude>**/*.patch</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>connectors</outputDirectory>
            <includes>
                <include>org.forgerock.openicf.connectors:marketo-connector</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
