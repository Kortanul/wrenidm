<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>openidm-samples</artifactId>
        <groupId>org.forgerock.openidm</groupId>
        <version>5.5.0-SNAPSHOT</version>
    </parent>

    <artifactId>provisioning-with-workflow</artifactId>
    <name>OpenIDM Provisioning with Workflow Sample</name>
    <packaging>pom</packaging>

    <dependencies>
        <dependency>
            <groupId>org.forgerock.openidm</groupId>
            <artifactId>default</artifactId>
            <version>${project.version}</version>
            <classifier>samples</classifier>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.forgerock.openidm</groupId>
            <artifactId>misc</artifactId>
            <version>${project.version}</version>
            <classifier>samples</classifier>
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>zip-workflow-files</id>
                        <phase>prepare-package</phase>

                        <configuration>
                            <tasks>
                                <zip basedir="${project.basedir}/src/main/resources/workflow"
                                     destfile="${project.build.directory}/bar-files/workflow/chess.bar"
                                     includes="chess*" />
                                <zip basedir="${project.basedir}/src/main/resources/workflow"
                                     destfile="${project.build.directory}/bar-files/workflow/contractorOnboarding.bar"
                                     includes="contractor*" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- bind to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/provisioning-with-workflow.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
